<project default="jar">
    <path id="classpath">
	<fileset dir="lib" includes="**/*.jar"/>
    </path>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
    	
        <javac srcdir="src" destdir="build/classes" classpathref="classpath"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="build/jar"/>
    	<!--<copy file="lib/snakeyaml-1.11.jar" toFile="build/classes/"/>-->
        <jar destfile="build/KoPeMe.jar" basedir="build/classes">
        <zipgroupfileset dir="lib/" includes="**/*.jar"/>
	    <fileset dir="lib" includes="**/*.jar"/>
            <manifest>
                <attribute name="Main-Class" value="de.kepeme.PerformanceTestRunner"/>
            </manifest>
        </jar>
    </target>

</project>
